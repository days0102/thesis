    "version": "0.2.0",
    "configurations": [
        {
            "name": "thesis",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8082",
            "webRoot": "${workspaceFolder}/PDSW20_artefacts/gauge_frontend"
        },
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/PDSW20_artefacts/gauge_frontend"
        },
        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                // "--no-reload"
            ],
            "jinja": false,
            "justMyCode": true
        }
    ]
}